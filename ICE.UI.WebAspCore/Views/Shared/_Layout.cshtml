<!DOCTYPE html>
<html lang="en">
<head>
    
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ICE</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    @*<link rel="stylesheet"href="/css/estilo.css" />*@
</head>
<body background="/IMG/FOND.png">

    <header class="badge-success">

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-success border-bottom box-shadow mb-3" >
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ICE</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="btn-success">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                            </li>
                            <li class="btn-success">
                                <a class="nav-link text-light" asp-area="" asp-controller="Matricula" asp-action="Index">Matricula</a>
                            </li>
                            <li class="btn-success">
                                <a class="nav-link text-light" asp-area="" asp-controller="Matricula" asp-action="Inicio">Alumnos</a>
                            </li>

                            <li class="btn-success">
                                <a class="nav-link text-light" asp-area="" asp-controller="Docente" asp-action="Index">Docentes</a>
                            </li>
                            <li class="btn-success">
                                <a class="nav-link text-light" asp-area="" asp-controller="Curso" asp-action="Index">Cursos</a>
                            </li>
                            <li class="btn-success">
                                <a class="nav-link text-light" asp-area="" asp-controller="Grupo" asp-action="Index">Grupos</a>
                            </li>
                            <li class="btn-success">
                                <a class="nav-link text-light" asp-area="" asp-controller="Calificacion" asp-action="Index">Calificacion</a>
                            </li>


                            <li class="btn-success">
                                <a class="nav-link text-light" asp-area="" asp-controller="Rol" asp-action="Index">Rol</a>
                            </li>
                            <li class="btn-success">
                                <a class="nav-link text-light" asp-area="" asp-controller="Usuario" asp-action="Index">Usuario</a>
                            </li>
                            <li class="btn-success">
                                <a class="nav-link text-light" asp-area="" asp-controller="Usuario" asp-action="CambiarPassword">Cambiar password</a>
                            </li>
                            <li class="btn-success">
                                <a class="nav-link text-light" asp-area="" asp-controller="Usuario" asp-action="CerrarSesion">Cerrar sesión</a>
                            </li>
                        </ul>
                    </div>
                }
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - ICE.UI.WebAspCore - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
