@model ICE.Control.EntidadesDeNegocio.Usuario

@{
    ViewData["Title"] = "Login";
}


<section class="vh-65" style="background-color:white">
    <div class="container py-5 h-95">
        <div class="row d-flex justify-content-center align-items-center h-65">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="~/IMG/ICE.jpg"
                                 alt="login form" class="img-fluid" style="border-radius: 3rem 4rem;" />

                        </div>
                        <div class="col-md-4 col-lg-5 d-flex align-items-center">
                            <div class="card-body p-lg-4 p-lg-5 text-black">
                                <form asp-action="Login">
                                    <input type="hidden" name="pReturnUrl" value="@ViewBag.Url" />
                                    <div class="col-md-10">
                                        <div class="form-group">
                                            <label asp-for="Login" class="control-label"></label>
                                            <input asp-for="Login" class="form-control" />
                                            <span asp-validation-for="Login" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-10">
                                        <div class="form-group">
                                            <label asp-for="Password" class="control-label"></label>
                                            <input asp-for="Password" class="form-control" />
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" value="Login" class="btn btn-primary" />
                                    </div>
                                    <span class="text-danger">@ViewBag.Error</span>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
